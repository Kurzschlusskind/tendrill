# Tendrill Environment Configuration
# Copy to .env and adjust values

# =============================================================================
# Database (PostgreSQL + TimescaleDB)
# =============================================================================
POSTGRES_USER=tendrill
POSTGRES_PASSWORD=tendrill_secret
POSTGRES_DB=tendrill
POSTGRES_PORT=5432

# =============================================================================
# MQTT (Mosquitto)
# =============================================================================
MQTT_USER=tendrill
MQTT_PASSWORD=tendrill_mqtt
MQTT_PORT=1883
MQTT_WS_PORT=9001

# =============================================================================
# Redis
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# Tendrill API
# =============================================================================
API_PORT=8000
TENDRILL_ENV=development
TENDRILL_DEBUG=true
TENDRILL_LOG_LEVEL=INFO

# =============================================================================
# Security (generate with: openssl rand -hex 32)
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
